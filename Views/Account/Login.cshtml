@using ShoeShop.Dto
@model LoginDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
}
<div class="breadcrumb-area mt-30">
    <div class="container">
        <div class="breadcrumb">
            <ul class="d-flex align-items-center">
                <li><a href="/">Trang chủ</a></li>
                <li class="active"><a asp-action="Login" asp-controller="Account">Đăng nhập</a></li>
            </ul>
        </div>
    </div>
    <!-- Container End -->
</div>
<!-- Breadcrumb End -->
<!-- LogIn Page Start -->
<div class="log-in ptb-100 ptb-sm-60">
    <div class="container">
        <div class="row">
            <!-- New Customer Start -->
            <div class="col-md-6">
                <div class="well mb-sm-30">
                    <div class="new-customer">
                        <h3 class="custom-title">ĐĂNG KÍ</h3>
                        <br>
                        <p>Bằng cách tạo tài khoản, bạn sẽ có thể mua sắm nhanh hơn, cập nhật trạng thái đơn hàng và theo dõi các đơn hàng bạn đã thực hiện trước đó</p>
                        <a class="customer-btn" asp-action="Register" asp-controller="Account">Tiếp tục</a>
                    </div>
                </div>
            </div>
            <!-- New Customer End -->
            <!-- Returning Customer Start -->
            <div class="col-md-6">
                <div class="well">
                    <div class="return-customer">
                        <h3 class="mb-10 custom-title">ĐĂNG NHẬP</h3>
                        <br>
                        @if (TempData["Error"] != null)
                        {
                            <span class="text-danger">@TempData["Error"]</span>
                        }
                        <form asp-action="Login" asp-controller="Account" method="post">
                            <div class="form-group">
                                <label>Tài khoảng</label>
                                <input asp-for="Email" type="text" placeholder="Nhập địa chỉ email..." id="input-email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input asp-for="Password" type="password"  placeholder="Mật khẩu" id="input-password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <p class="lost-password"><a asp-action="ForgotPassword" asp-controller="Account">Quên mật khẩu?</a></p>
                            <input type="submit" value="Đăng nhập" class="return-customer-btn">
                        </form>
                    </div>
                </div>
            </div>
            <!-- Returning Customer End -->
        </div>
        <!-- Row End -->
    </div>
    <!-- Container End -->
</div>
