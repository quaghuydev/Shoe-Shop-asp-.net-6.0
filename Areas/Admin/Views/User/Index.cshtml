    ViewData["Title"] = "Quản lí người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<User>
@using System.Globalization;
@using ShoeShop.Models.Enums
